@import "color";
.woocommerce-page {
    .woocommerce-products-header{
       
        h1 {
     
            font-weight: 300;
            line-height: 75px;
            span {
                display: inline-block;
                position: relative;
                width: 100%;
            }

            span:after {
                content: "";
                position: absolute;
                height: 5px;
                border-top: 2px solid $accent-color;
                top: 39px;
                width: calc(100% - 300px);
            }

            span:after {
                margin-left: 10px;
            }
        }
        h3{
            color: $accent-color;
        }
    }
    .content-area {
        padding-left: 50px;
        padding-right: 50px;
        margin-bottom: 150px;
        //category archive
        .cat-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }
        .product_type_simple{
            display: none;
        }
        .products {
            a{
                color: $accent-color;
            }
            .price {
                display: none!important;
            }
            .add_to_cart_button {
                display: none;
            }
          
        }
        .container {
            margin-top: 30px;
            
            h3{
                color: $accent-color;
            }
            .sorting{
                
                a{
                    color: black;
                }
                .widget-1{
                    border:none;
                    border-bottom: 1px solid gray;
                }
                .widget-2{
                    margin-top: 10px;
                    border:none;
                    border-bottom: 1px solid gray;
                }
                .widget-3{ 
                    margin-top: 10px;
                    border:none;
                    border-bottom: 1px solid gray;
                }  
                .widget-4{
                    margin-top: 10px;
                    border:none;
                    border-bottom: 1px solid gray;
                }
            }
            .contact{
                margin-top: 30px;
            }
        }

        //single product
        .woocommerce-product-gallery {
            .woocommerce-product-gallery__image {
                height: 500px;
            }

            .flex-control-nav {
                li {
                    img {
                        height: 150px;
                        object-fit: cover;
                    }
                }
            }
        }
        .summary {
            .custom-btn {
                margin-top: 40px;
                border-radius: 16px;
                a {
                    padding-top: 10px;
                    padding-bottom: 10px;
                    border-radius: 22px;
                    color: white;
                }
            }
            .contact-us {
                margin-top: 30px;
                a {
                    color: $accent-color;
                    i {
                        padding-right: 10px;
                    }
                }
            }
            .resources {
                margin-top: 10px;
                a {
                    color: $accent-color;
                    i {
                        padding-right: 10px;
                    }
                }
            }
        }
        .quote-modal{
            .custom_btn{
                background: $accent-color;
                color: white;
            }
            .custom_btn:hover{
                background: white;
                border: 1px solid $accent-color;
                color: $accent-color;
            }
            
            
        }
    }
    .woocommerce-tabs{
        .woocommerce-Tabs-panel--description{
            .ssba-classic-2{
                display: none;
            }
        }
    }
    
}

